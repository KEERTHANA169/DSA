class Solution {
    public double findMaxAverage(int[] nums, int k) {
        double maxAverage = -1e9; // start with a very small number

        for (int i = 0; i <= nums.length - k; i++) {
            int currentSum = 0;

            // take k elements starting from i
            for (int j = i; j < i + k; j++) {
                currentSum += nums[j];
            }

            double currentAverage = (double) currentSum / k;
            maxAverage = Math.max(maxAverage, currentAverage);
        }

        return maxAverage;
    }
}
